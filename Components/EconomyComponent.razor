@inject IEconomyFaker _economyFaker
@inject ISnackbar _snackbar
@inject ILocalStorageService _localStorage
@inject IFileExporterService _fileExporterService

@if (isLoading)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudDataGrid T="EconomyModel" Items="economyData" Dense="true" Hover="true" Bordered="true" Striped="true" ColumnResizeMode="ResizeMode.Container">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Economy Data</MudText>
            <MudSpacer />
            <MudStack Row Spacing="2" AlignItems="AlignItems.Center">
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Custom.FileFormats.FileDocument" OnClick="ExportCsv">Export .csv</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Custom.FileFormats.FileExcel" OnClick="ExportXlsx">Export .xlsx</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Custom.FileFormats.FileCode" OnClick="ExportSql">Export .sql</MudButton>
            </MudStack>
        </ToolBarContent>

        <Columns>
            <PropertyColumn Property="x => x.Country" Title="Country" />
            <PropertyColumn Property="x => x.Currency" Title="Currency" />
            <PropertyColumn Property="x => x.GDP" Title="GDP">
                <CellTemplate>
                    @($"{context.Item.GDP:N0}")
                </CellTemplate>
            </PropertyColumn>
            <PropertyColumn Property="x => x.InflationRate" Title="Inflation (%)" />
            <PropertyColumn Property="x => x.UnemploymentRate" Title="Unemployment (%)" />
            <PropertyColumn Property="x => x.LastUpdate" Title="Last Update">
                <CellTemplate>
                    @context.Item.LastUpdate.ToShortDateString()
                </CellTemplate>
            </PropertyColumn>
            <PropertyColumn Property="x => x.EconomicSector" Title="Main Sector" />
            <PropertyColumn Property="x => x.MainExport" Title="Main Export" />
            <PropertyColumn Property="x => x.MainImport" Title="Main Import" />
            <PropertyColumn Property="x => x.DebtToGDP" Title="Debt-to-GDP (%)" />
            <PropertyColumn Property="x => x.EconomicOutlook" Title="Outlook" />
            <PropertyColumn Property="x => x.InterestRate" Title="Interest Rate (%)" />
            <PropertyColumn Property="x => x.CreditRating" Title="Rating" />
            <PropertyColumn Property="x => x.CentralBank" Title="Central Bank" />
            <PropertyColumn Property="x => x.ExchangeRegime" Title="Exchange Regime" />
        </Columns>
        <PagerContent>
            <MudDataGridPager T="EconomyModel" />
        </PagerContent>
    </MudDataGrid>
}


@code {

    private bool isLoading = false;

    private IEnumerable<EconomyModel> economyData = [];

    RegionInfo? regionInfo = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;

            int Quantity = await _localStorage.GetItemAsync<int>("quantity");

            string? Language = await _localStorage.GetItemAsync<string>("selectedLanguage");

            await Task.Delay(1000);

            economyData = await _economyFaker.GenerateaEconomyAsync(Quantity, Language!);

            Language = Language!.ReplaceLanguage(Language!);

            regionInfo = new RegionInfo(Language);

            isLoading = false;
        }
        catch (Exception ex)
        {
            _snackbar.Add(ex.Message, MudBlazor.Severity.Error);
            economyData = Enumerable.Empty<EconomyModel>();
        }
        await Task.CompletedTask;

    }

    private async Task ExportCsv()
    {
        try
        {
            await _fileExporterService.ExportCsvAsync(economyData, "Economy");

            _snackbar.Add("CSV file exported successfully!", Severity.Success);
        }
        catch (Exception ex)
        {
            _snackbar.Add($"Error exporting CSV: {ex.Message}", Severity.Error);
        }
    }

    private async Task ExportXlsx()
    {
        try
        {
            await _fileExporterService.ExportXlsxAsync(economyData, "Economy");

            _snackbar.Add("XLSX file exported successfully!", Severity.Success);
        }
        catch (Exception ex)
        {
            _snackbar.Add($"Error exporting Excel: {ex.Message}", Severity.Error);
        }
    }

    private async Task ExportSql()
    {
        try
        {
            await _fileExporterService.ExportSqlAsync(economyData, "Economy");

            _snackbar.Add("SQL script exported successfully!", Severity.Success);
        }
        catch (Exception ex)
        {
            _snackbar.Add($"Error exporting SQL: {ex.Message}", Severity.Error);
        }
    }
}
