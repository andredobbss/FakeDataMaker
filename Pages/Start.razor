@page "/"
@layout MainLayout

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-12 pa-6">

    <MudPaper Class="p-6 text-center pa-8" Elevation="4">
        <MudText Typo="Typo.h3" Color="Color.Primary" GutterBottom="true">Fake Data Maker</MudText>
        <MudText Typo="Typo.subtitle1" GutterBottom="true">
            Generate realistic fake data by sector for testing, demos, and prototyping.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="/home">
            Get Started
        </MudButton>
    </MudPaper>

    <MudDivider Class="my-6" />

    <MudGrid Gutter="Size.Medium">
        <MudItem xs="12" sm="4">
            <MudPaper Class="pa-8">
                <MudIcon Icon="@Icons.Material.Filled.Domain" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6">By Sector</MudText>
                <MudText Typo="Typo.body2">Generate data for specific industries like Finance, Education, Health, and more.</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudPaper Class="pa-8">
                <MudIcon Icon="@Icons.Material.Filled.Language" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6">Multi-language</MudText>
                <MudText Typo="Typo.body2">Support for multiple languages and cultural data formats.</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="4">
            <MudPaper Class="pa-8">
                <MudIcon Icon="@Icons.Material.Filled.DataObject" Size="Size.Large" Color="Color.Primary" />
                <MudText Typo="Typo.h6">Export Options</MudText>
                <MudText Typo="Typo.body2">Export your data to CSV, Excel, or SQL scripts in seconds.</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

